<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jason.mapper.MenuMapper">
    <resultMap id="baseResultMap" type="com.jason.domain.Menu">
        <id column="id" property="id"/>
        <result column="menu_name" property="menuName"/>
        <result column="path" property="path"/>
        <result column="component" property="component"/>
        <result column="visible" property="visible"/>
        <result column="status" property="status"/>
        <result column="perms" property="perms"/>
        <result column="icon" property="icon"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_flag" property="delFlag"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <select id="selectByUserName" resultMap="baseResultMap">
        select id,
           menu_name,
            path,
            component,
            visible,
            status,
            perms,
            icon,
            create_by,
            create_time,
            update_by,
            update_time,
            del_flag,
            remark
        from sys_menu
        where sys_menu.id in (select menu_id
                              from sys_role_menu
                              where sys_role_menu.role_id in (select role_id
                                                              from sys_user_role
                                                              where sys_user_role.user_id in
                                                                    (select sys_user.id from sys_user where user_name = #{userName})));
    </select>


</mapper>