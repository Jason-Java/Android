<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoopView">
        <attr name="awv_textsize" format="integer" />
        <attr name="awv_lineSpace" format="float" />
        <attr name="awv_centerTextColor" format="integer" />
        <attr name="awv_outerTextColor" format="integer" />
        <attr name="awv_dividerTextColor" format="integer" />
        <attr name="awv_itemsVisibleCount" format="integer" />
        <attr name="awv_isLoop" format="boolean" />
        <attr name="awv_isCurve" format="boolean" />
        <attr name="awv_initialPosition" format="integer" />
        <attr name="awv_scaleX" format="float" />
    </declare-styleable>

    <declare-styleable name="JasonButton">
        <!--文字相关    -->
        <attr name="ja_textSize" format="dimension" />
        <attr name="ja_textColorPress" format="color" />
        <attr name="ja_textColorDefault" format="color" />
        <attr name="ja_textColor" format="color" />
        <attr name="ja_text" format="string" />
        <!--    背景相关-->
        <attr name="ja_bgColorPress" format="reference|color" />
        <attr name="ja_bgColorDefault" format="reference|color" />
        <attr name="ja_bgColor" format="reference|color" />
        <!--    圆角相关-->
        <attr name="ja_radius" format="dimension" />
        <attr name="ja_leftTopRadius" format="dimension" />
        <attr name="ja_RightTopRadius" format="dimension" />
        <attr name="ja_leftBottomRadius" format="dimension" />
        <attr name="ja_RightBottomRadius" format="dimension" />
        <!--        边框相关-->
        <attr name="ja_strokeWidth" format="dimension" />
        <attr name="ja_strokeColorDefault" format="color" />
        <attr name="ja_strokeColorPress" format="color" />
        <attr name="ja_strokeColor" format="color" />
        <!--        是否可用-->
        <attr name="ja_enable" format="boolean" />
        <!--        是否可点击-->
        <attr name="ja_clickable" format="boolean" />

        <attr name="ja_gravity">
            <enum name="center" value="01" />
            <enum name="center_vertical" value="02" />
            <enum name="center_horizontal" value="03" />
        </attr>

        <!--        内边距相关-->
        <attr name="ja_padding" format="dimension" />
        <attr name="ja_paddingLeft" format="dimension" />
        <attr name="ja_paddingRight" format="dimension" />
        <attr name="ja_paddingTop" format="dimension" />
        <attr name="ja_paddingBottom" format="dimension" />


    </declare-styleable>
</resources>