<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llParen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jason_popup_calendar"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/jason_select_radiobutton"
                android:button="@null"
                android:checked="true"
                android:gravity="center"

                android:text="日期: "
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/jason_select_radiobutton"
                android:button="@null"
                android:gravity="center"
                android:text="时间: "
                android:textSize="12sp" />
        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="268dp"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <com.unite.jasonjar.wheel.LoopView
                android:id="@+id/yearView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:awv_textsize="18" />

            <com.unite.jasonjar.wheel.LoopView
                android:id="@+id/monthView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:awv_textsize="18" />

            <com.unite.jasonjar.wheel.LoopView
                android:id="@+id/dayView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:awv_textsize="18" />

            <com.unite.jasonjar.wheel.LoopView
                android:id="@+id/hoursView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                app:awv_textsize="18" />


            <com.unite.jasonjar.wheel.LoopView
                android:id="@+id/minuteView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                app:awv_textsize="18" />

            <com.unite.jasonjar.wheel.LoopView
                android:id="@+id/secondView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                app:awv_textsize="18" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>