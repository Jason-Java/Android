<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="JasonBaseView">
        <!--文字相关    -->
        <attr format="dimension" name="ja_textSize"/>
        <attr format="color" name="ja_textColorPress"/>
        <attr format="color" name="ja_textColorDefault"/>
        <attr format="color" name="ja_textColor"/>
        <attr format="string" name="ja_text"/>
        <!--    背景相关-->
        <attr format="reference|color" name="ja_bgColorPress"/>
        <attr format="reference|color" name="ja_bgColorDefault"/>
        <attr format="reference|color" name="ja_bgColor"/>
        <!--    圆角相关-->
        <attr format="dimension" name="ja_radius"/>
        <attr format="dimension" name="ja_leftTopRadius"/>
        <attr format="dimension" name="ja_RightTopRadius"/>
        <attr format="dimension" name="ja_leftBottomRadius"/>
        <attr format="dimension" name="ja_RightBottomRadius"/>
        <!--        边框相关-->
        <attr format="dimension" name="ja_strokeWidth"/>
        <attr format="color" name="ja_strokeColorDefault"/>
        <attr format="color" name="ja_strokeColorPress"/>
        <attr format="color" name="ja_strokeColor"/>

        <!--        是否可点击-->
        <attr format="boolean" name="ja_clickable"/>

        <!--        是否可用-->
        <attr format="boolean" name="ja_enable"/>


        <attr name="ja_gravity">
            <enum name="center" value="01"/>
            <enum name="center_vertical" value="02"/>
            <enum name="center_horizontal" value="03"/>
        </attr>

        <!--        内边距相关-->
        <attr format="dimension" name="ja_padding"/>
        <attr format="dimension" name="ja_paddingLeft"/>
        <attr format="dimension" name="ja_paddingRight"/>
        <attr format="dimension" name="ja_paddingTop"/>
        <attr format="dimension" name="ja_paddingBottom"/>


    </declare-styleable>
    <declare-styleable name="JasonButton">

    </declare-styleable>
    <declare-styleable name="JasonTextView">


    </declare-styleable>
    <declare-styleable name="LoopView">
        <attr format="integer" name="awv_textsize"/>
        <attr format="float" name="awv_lineSpace"/>
        <attr format="integer" name="awv_centerTextColor"/>
        <attr format="integer" name="awv_outerTextColor"/>
        <attr format="integer" name="awv_dividerTextColor"/>
        <attr format="integer" name="awv_itemsVisibleCount"/>
        <attr format="boolean" name="awv_isLoop"/>
        <attr format="boolean" name="awv_isCurve"/>
        <attr format="integer" name="awv_initialPosition"/>
        <attr format="float" name="awv_scaleX"/>
    </declare-styleable>
</resources>